<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center">

    <ImageView
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/dialog_heart_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/detailpg_heart_on"/>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dialog_heart_image"
        android:id="@+id/dialog_heart_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목이 들어갈거야"
        android:textColor="#000000"
        android:textSize="16dp"/>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dialog_heart_title"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="좋아요"
        android:textColor="#1f1f1f"
        android:textSize="13dp"/>

</RelativeLayout>