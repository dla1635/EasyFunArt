<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hongik.jwlim.easyfunart.Activity.WriteReview">
    <Button
        android:id="@+id/back_button2"
        android:layout_marginTop="17.11dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/detailpg_backbutton_black"
        />
    <TextView
        android:id="@+id/a"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FCDC09"

        />
    <TextView
        android:layout_marginLeft="170dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="리뷰 작성"
        android:textSize="17dp"/>

    <Button
        android:id="@+id/write"
        android:layout_alignParentRight="true"
        android:layout_width="21.18dp"
        android:layout_height="21.18dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/noun_1359764_cc"
       
        />

    <TextView
        android:id="@+id/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="18dp"
        android:text="관람한 전시"
        android:layout_below="@+id/a"
        android:textSize="15dp"/>
    <ImageView
        android:layout_below="@+id/b"
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:background="#ECECEC"/>
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="18dp"
        android:id="@+id/img"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@+id/b"
        android:src="@raw/jwh"
        />
    <TextView
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b"
        android:text="요나스 : 찰나,힐긋, 돌아보다."
        android:layout_toRightOf="@+id/img"
        android:textSize="17dp"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/img"
        android:text="서울시립미술관"
        android:textSize="11dp"/>

    <TextView
        android:layout_marginLeft="18dp"
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:text="평점"
        android:textSize="15dp"
        android:layout_marginTop="25dp"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/detailpg_star_on"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="190dp"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/detailpg_star_on"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="190dp"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/detailpg_star_on"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="190dp"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/detailpg_star_on"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="190dp"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/detailpg_star_off"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="190dp"
        />
    <ImageView

        android:layout_width="400dp"
        android:layout_height="5dp"
        android:layout_marginTop="225dp"
        android:background="#ECECEC"/>
    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="18dp"
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score"
        android:text="날짜"
        android:textSize="15dp"
        />
    <ImageView
        android:layout_width="400dp"
        android:layout_height="5dp"
        android:layout_marginTop="270dp"
        android:background="#ECECEC"/>
    <Button
        android:layout_marginTop="280dp"
        android:layout_marginLeft="50dp"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:visibility="invisible"
        />
    <ImageView
        android:layout_marginTop="260dp"
        android:layout_marginLeft="50dp"
        android:layout_width="130dp"
        android:layout_height="2dp"
        android:background="#FCDC09"
        />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="167dp"
        android:src="@drawable/noun_1359764_cc"/>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="18dp"
        android:id="@+id/review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:text="리뷰"
        android:textSize="15dp"
        />
    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/review"
        android:background="#ECECEC"/>
    
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="카메라"
        android:textSize="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="300dp"
        />
    <Button
        android:textSize="10dp"
        android:id="@+id/gallery"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="갤러리"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
